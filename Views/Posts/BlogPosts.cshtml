@model IEnumerable<Dragon_BlogReal.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>The Blog: @ViewData["BlogName"] has @Model.Count() Posts</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewData["BlogId"]">Create New Post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abstract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abstract)
            </td>
            <td>
                @Html.Raw(item.Body)
            </td>
          
            @*<td>
                @Html.DisplayFor(modelItem => item.IsPublished)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Blog.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>|

            </td>
        </tr>
}
    </tbody>
</table>
